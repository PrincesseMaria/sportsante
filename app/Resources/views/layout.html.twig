<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1" name="viewport">
        <title>Sport & Santé</title>
        <meta content="Free Bootstrap Theme by BootstrapMade.com" name="description">
        <meta content="free website templates, free bootstrap themes, free template, free bootstrap, free website template" name="keywords">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans|Candal|Alegreya+Sans" rel="stylesheet" type="text/css">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
        <style>
            .footer {
                margin-top: 100px;
                position: fixed;
                left: 0;
                background-color: black;
                bottom: 0;
                width: 100%;
                color: white;
                text-align: center;
            }
        </style>
    </head>
    <body onload="loadMap()">
        {% block menu %}
            <!--Navigation bar-->
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button class="navbar-toggle" data-target="#myNavbar" data-toggle="collapse" type="button">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        {% image '@SPORTSanteBundle/Resources/public/logo/acceuil.gif' %}
                        <img class="navbar-brand" src="{{ asset_url }}" alt="sport & santé" width="70" height="70"/>
                        {% endimage %}
                    </div>
                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="{{path('sport_sante_homepage')}}">Accueil</a>
                            </li>
                            <li>
                                <a href="{{path('sport_location_homepage')}}">Emprunter</a>
                            </li>
                            <li>
                                <a href="{{path('sport_sante_seancepage')}}" data-toggle="modal">Seance</a>
                            </li>
                            <li>
                                <a href="{{path('sport_sante_abonnement')}}" data-toggle="modal">S'abonner</a>
                            </li>
                            <li class="btn-trial">
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" type="button">
                                        <span class="glyphicon glyphicon-user"></span>
                                        <span class="caret"></span>
                                    </button>

                                    {#  {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} #}


                                    <ul class="dropdown-menu">
                                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                            <li>
                                                <a href="#pricing">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a>
                                            </li><br/>

                                            <li>
                                                <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                                            </li><br/>
                                            <li>
                                                <a href={{ path('fos_user_change_password') }}>Changer le mot de passe</a>
                                            </li><br/>
                                        {% else %}

                                            <li>
                                                <a href={{ path('fos_user_security_login') }}>{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                                            </li><br/>
                                            <li>
                                                <a href={{ path('fos_user_registration_register') }}>S'inscrire</a>
                                            </li>
                                        {% endif %}

                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

        {% endblock %}
        <!--/ Navigation bar-->

        <!--- Banner --------->
        {% block Banner %}
            <br/>
            <br/>
            <br/>
            <br/>
            <div class="container">
                <div
                    class="carousel slide" data-ride="carousel" id="myCarousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li class="active" data-slide-to="0" data-target="#myCarousel"></li>
                        <li data-slide-to="1" data-target="#myCarousel"></li>
                        <li data-slide-to="2" data-target="#myCarousel"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            {% image '@SPORTSanteBundle/Resources/public/banner/1.jpg' %}
                            <img src="{{ asset_url }}" width="1300" height="200" alt="Villier-Sur-Marne"/>
                            {% endimage %}
                            <div class="carousel-caption">
                                <h3>Villier-Sur-Marne</h3>
                            </div>
                        </div>

                        <div class="item">
                            {% image '@SPORTSanteBundle/Resources/public/banner/item2.jpg' %}
                            <img src="{{ asset_url }}" width="1300" height="200" alt="Pierrefitte-Sur-Seine"/>
                            {% endimage %}
                            <div class="carousel-caption">
                                <h3>Pierrefitte-Sur-Seine</h3>
                            </div>
                        </div>

                        <div class="item">
                            {% image '@SPORTSanteBundle/Resources/public/banner/item3.jpg' %}
                            <img src="{{ asset_url }}" width="1300" height="200" alt="Paris"/>
                            {% endimage %}
                            <div class="carousel-caption">
                                <h3>Paris</h3>
                            </div>
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" data-slide="prev" href="#myCarousel">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" data-slide="next" href="#myCarousel">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div height="121" width="1300">
                    {% image '@SPORTSanteBundle/Resources/public/banner/work1.jpg' %}
                    <img src="{{ asset_url }}" width="1140" height="121"/>
                    {% endimage %}
                </div>
                <div height="121" width="1300">
                    {% image '@SPORTSanteBundle/Resources/public/banner/work2.jpg' %}
                    <img src="{{ asset_url }}" width="1140" height="121"/>
                    {% endimage %}
                </div>
            </div>
        {% endblock %}

        {% block content %}
        <!--/Modal box-->

        {%endblock%}

        <!--/ Contact-->
        <div style="margin-top: 110px;"></div>
        <!--Footer-->
        <div class=" footer container text-center">
            <div class="row">
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    <p>©2019 Sport & Santé</p>
                </div>
            </div>
        </div>
        <!--/ Footer-->
    </body>
</html>
