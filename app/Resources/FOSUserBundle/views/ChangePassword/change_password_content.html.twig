{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        
        <br/><br/><br/>
       
        <div class="col-lg-offset-4 col-sm-3">

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

<h2>Changer le mot de passe </h2>


<!--NOM-->
<div class="form-group row">

    {{ form_label(form.current_password, 'Mot de passe actuel', {'label_attr': {'class': 'col-2 col-form-label'}}) }}
    <!-- <input type="password" id="password" placeholder="Password" class="form-control">-->
    {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group row">

    {{ form_label(form.plainPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'col-2 col-form-label'}}) }}
    <!-- <input type="password" id="password" placeholder="Password" class="form-control">-->
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group row">
    
    {{ form_label(form.plainPassword.second, 'Répéter le nouveau mot de passe', {'label_attr': {'class': 'col-2 col-form-label'}}) }}
    <!-- <input type="password" id="password" placeholder="Password" class="form-control">-->
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
 
</div>


<div>
    <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn-submit" />
</div>
{{ form_end(form) }}

        </div>
    </div>
</div>