{% extends '::admin.html.twig' %}

{% block content %}
          
            

        <div class="row">
            <div class="col-sm-8">

                <div class="row">
                    
                    <div class="col-sm-12" >
                        <h1>Créer une nouvelle catégorie</h1>

                        {{ form_start(form) }}

                        <div class="form-group row">
                            {{ form_label(form.categoryNom, 'Nom', {'label_attr': {'class': ''}}) }}
                            {% if  form_errors(form.categoryNom)  is not empty %}
                                <div class="alert alert-danger" role="alert">
                                    <strong>{{ form_errors(form.categoryNom) }}</strong> 
                                </div> 
                            {% endif %}
                            {{ form_widget(form.categoryNom, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        
                         <br/>
                        <input type="submit" colspan="2" class="btn-submit"value="Créer" />
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-4" style="background-color:lavenderblush;"><ul>
                    <li>
                        <a href="{{ path('categoryadmin_index') }}"><span class="glyphicon glyphicon-th-list"></span></a>
                    </li>
                </ul></div>
        </div>
    
{% endblock %}
