{% extends '::admin.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-sm-8">

            <div class="row">

                <div class="col-sm-12" >
                    <h1>Créer la livraison</h1>

                    {{ form_start(form) }}

                    <div class="form-group row">
                        {{ form_label(form.datelivraison, 'Date de livraison', {'label_attr': {'class': ''}}) }}
                        {% if  form_errors(form.datelivraison)  is not empty %}
                            <div class="alert alert-danger" role="alert">
                                <strong>{{ form_errors(form.datelivraison) }}</strong> 
                            </div> 
                        {% endif %}
                        {{ form_widget(form.datelivraison, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.dateretour, 'Date retour', {'label_attr': {'class': ''}}) }}

                        {% if  form_errors(form.dateretour)  is not empty %}
                            <div class="alert alert-danger" role="alert">
                                <strong>{{ form_errors(form.dateretour) }}</strong> 
                            </div> 
                        {% endif %}
                        {{ form_widget(form.dateretour, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <br/>
                    <input type="submit" colspan="2" class="btn-submit"value="Créer" />
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-sm-4" ><ul>
                <li>
                    <a href="{{ path('adminlivraison_index') }}"><span class="glyphicon glyphicon-th-list"></span></a>
                </li>
            </ul></div>
    </div>
{% endblock %}
