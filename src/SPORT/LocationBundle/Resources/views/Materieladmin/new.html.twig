{% extends '::admin.html.twig' %}

{% block content %}


    <div class="row">
        <div class="col-sm-8">

            <div class="row">

                <div class="col-sm-12" >
                    <h1>Créer un nouveau matériel</h1>

                    {{ form_start(form) }}

                    <div class="form-group row">
                        {{ form_label(form.materielNom, 'Nom', {'label_attr': {'class': ''}}) }}

                        {% if  form_errors(form.materielNom)  is not empty %}
                            <div class="alert alert-danger" role="alert">
                                <strong>{{ form_errors(form.materielNom) }}</strong> 
                            </div> 
                        {% endif %}
                        {{ form_widget(form.materielNom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.materielMarque, 'Marque', {'label_attr': {'class': ''}}) }}
                        {% if  form_errors(form.materielMarque)  is not empty %}
                            <div class="alert alert-danger" role="alert">
                                <strong>{{ form_errors(form.materielMarque) }}</strong> 
                            </div> 
                        {% endif %}
                        {{ form_widget(form.materielMarque, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.materielPrixlocation, 'Prix', {'label_attr': {'class': ''}}) }}
                        {{ form_widget(form.materielPrixlocation, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.tvaPrix, 'Tva', {'label_attr': {'class': ''}}) }}
                        {{ form_widget(form.tvaPrix, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.quantite, 'Quantité', {'label_attr': {'class': ''}}) }}
                        {% if  form_errors(form.quantite)  is not empty %}
                            <div class="alert alert-danger" role="alert">
                                <strong>{{ form_errors(form.quantite) }}</strong> 
                            </div> 
                        {% endif %}
                        {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': ''}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.image.file, 'Image', {'label_attr': {'class': ''}}) }}
                        {{ form_widget(form.image.file, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.description, 'description', {'label_attr': {'class': ''}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <br/>
                    <input type="submit" colspan="2" class="btn-submit"value="Créer" />
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-sm-4" ><ul>
                <li>
                    <a href="{{ path('materieladmin_index') }}"><span class="glyphicon glyphicon-th-list"></span></a>
                </li>
            </ul></div>
    </div>

{% endblock %}
