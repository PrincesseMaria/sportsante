{% extends '::admin.html.twig' %}

{% block content %}



    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                <div  {% if type=="notification" %}class="alert alert-info" {% elseif type!="notification" %} class="alert alert-danger"{% endif %}> 
                    <strong>   {{message}}     </strong> 
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="row">
        <div class="col-sm-8">

            <div class="row">

                <div class="col-sm-12" >
                    <h1>Modifier l'utilisateur</h1>

                    {{ form_start(edit_form) }}

                    <div class="edit_form-group row">
                        {{ form_label(edit_form.nom, 'Nom ', {'label_attr': {'class': ''}}) }}
                        {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>


                    <div class="edit_form-group row">
                        {{ form_label(edit_form.prenom, 'Prénom', {'label_attr': {'class': ''}}) }}
                        {{ form_widget(edit_form.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>


                    <!--ADresse-->
                    <div class="form-group row">

                        {{ form_label(edit_form.adresse, "Adresse", {'label_attr': {'class': 'col-2 col-form-label'}}) }}
                        {{ form_widget(edit_form.adresse, {'attr': {'class': 'form-control'}}) }}

                    </div> <!--Adresse-->

                    <div class="edit_form-group row">
                        {{ form_label(edit_form.username, "Nom d'utilisateur", {'label_attr': {'class': ''}}) }}
                        {{ form_widget(edit_form.username, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="edit_form-group row">
                        {{ form_label(edit_form.email, 'Email', {'label_attr': {'class': ''}}) }}
                        {{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <!--Password-->
                    <div class="form-group row">
                        {{ form_label(edit_form.plainPassword.first, "Mot de passe", {'label_attr': {'class': 'col-2 col-form-label'}}) }}
                        <!-- <input type="password" id="password" placeholder="Password" class="form-control">-->
                        {{ form_widget(edit_form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <!--password-->


                    <!--Répéter Password-->
                    <div class="form-group row">
                        {{ form_label(edit_form.plainPassword.second, "Répéter le Mot de passe", {'label_attr': {'class': 'col-2 col-form-label'}}) }}
                        <!-- <input type="password" id="password" placeholder="Password" class="form-control">-->
                        {{ form_widget(edit_form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group row">
                        {{ form_label(edit_form.roles, "Role", {'label_attr': {'class': 'col-2 col-form-label'}}) }}
                        <!-- <input type="password" id="password" placeholder="Password" class="form-control">-->
                        {{ form_widget(edit_form.roles, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group row">
                        {{ form_label(edit_form.enabled, "Activé", {'label_attr': {'class': 'col-2 col-form-label'}}) }}
                        <!-- <input type="password" id="password" placeholder="Password" class="form-control">-->
                        {{ form_widget(edit_form.enabled, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <input type="submit" colspan="2" class="btn-submit"value="Modifier" />
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
        <div class="col-sm-4" ><ul>
                <li>
                    <a href="{{ path('adminuser_index') }}"><span class="glyphicon glyphicon-th-list"></span></a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-trash"></span>  
                    </button>

                    {{ form_end(delete_form) }}
                </li>
            </ul></div>
    </div>           


{% endblock %}
