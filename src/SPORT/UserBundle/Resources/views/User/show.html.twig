{% extends '::admin.html.twig' %}

{% block content %}
    <h1>Utilisateur</h1>
    <br/><br/>

    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                <div  {% if type=="notification" %}class="alert alert-info" {% elseif type!="notification" %} class="alert alert-danger"{% endif %}> 
                    <strong>   {{message}}     </strong> 
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td><a href="{{ path('adminuser_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.Email }}</td>
                <td>
                    <ul>
                        <li>
                            {{ form_start(delete_form) }}

                            <button type="submit" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-trash"></span> 
                            </button>

                            {{ form_end(delete_form) }}                            </li>
                        <li>
                            <a href="{{ path('adminuser_edit', { 'id': user.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                        </li>
                    </ul>
                </td>
            </tr>



            <tr>
                <td> </td><td> </td><td> </td><td> </td>
                <td colspan="3"><button type="button" class="btn btn-primary"><a href="{{ path('adminuser_index') }}">Retour</a></button>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
