{% extends '::admin.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-sm-8">

            <div class="row">

                <div class="col-sm-12" >
                    <h1>Créer une nouvelle séance</h1>

                    {{ form_start(form) }}

                    <div class="edit_form-group row">
                        {{ form_label(form.jourSeance, 'Jour', {'label_attr': {'class': ''}}) }}
                        {% if  form_errors(form.jourSeance)  is not empty %}
                            <div class="alert alert-danger" role="alert">
                                <strong>{{ form_errors(form.jourSeance) }}</strong> 
                            </div> 
                        {% endif %}
                        {{ form_widget(form.jourSeance, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="edit_form-group row">
                        {{ form_label(form.dateSeance, 'Date', {'label_attr': {'class': ''}}) }}
                        {% if  form_errors(form.dateSeance)  is not empty %}
                            <div class="alert alert-danger" role="alert">
                                <strong>{{ form_errors(form.dateSeance) }}</strong> 
                            </div> 
                        {% endif %}
                        {{ form_widget(form.dateSeance, {'attr': {'class': 'form-control'}}) }}
                    </div>



                    <div class="edit_form-group row">
                        {{ form_label(form.salle, 'Ville', {'label_attr': {'class': ''}}) }}
                        {{ form_widget(form.salle, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <br/>
                    <input type="submit" colspan="2" class="btn-submit"value="Créer" />
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-sm-4" ><ul>
                <li>
                    <a href="{{ path('adminseance_index') }}"><span class="glyphicon glyphicon-th-list"></span></a>
                </li>

            </ul></div>
    </div>

{% endblock %}
