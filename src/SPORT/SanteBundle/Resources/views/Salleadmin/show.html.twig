{% extends '::admin.html.twig' %}
{% block content %}




   
    
        <h1>Salle</h1>
         {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    <div  {% if type=="notification" %}class="alert alert-info" {% elseif type!="notification" %} class="alert alert-danger"{% endif %}> 
                        <strong>   {{message}}     </strong> 
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Ville</th>
                    <th>Code postale</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td><a href="{{ path('adminsalle_show', { 'id': salle.id }) }}">{{ salle.id }}</a></td>
                    <td>{{ salle.nomSalle }}</td>
                    <td>{{ salle.adresseSalle }}</td>
                    <td>{{ salle.villeSalle }}</td>
                    <td>{{ salle.cpSalle }}</td>
                    <td>
                        <ul>
                            <li>
                                {{ form_start(delete_form) }}

                                <button type="submit" class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-trash"></span> 
                                </button>

                                {{ form_end(delete_form) }}                            </li>
                            <li>
                                <a href="{{ path('adminsalle_edit', { 'id': salle.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                            </li>
                        </ul>
                    </td>
                </tr>

                <tr>
                    <td> </td><td> </td><td> </td><td> </td>
                    <td colspan="3"><button type="button" class="btn btn-primary"><a href="{{ path('adminsalle_index') }}">Retour</a></button>
                    </td>
                </tr>
            </tbody>
        </table>
    
{% endblock %}
